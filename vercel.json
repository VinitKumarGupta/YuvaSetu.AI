{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/main.py"
        },
        {
            "src": "/(recommend|internships|stats|health)",
            "dest": "backend/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "index.html"
        }
    ]
}
